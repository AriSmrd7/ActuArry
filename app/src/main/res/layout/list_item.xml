<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:padding="2dp"
    android:paddingBottom="100dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            card_view:cardBackgroundColor="@color/colorBgWhite"
            card_view:cardCornerRadius="8dp"
            card_view:contentPaddingTop="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgList"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_fdaily_list_item"/>
                <TextView
                    android:id="@+id/list_title"
                    android:layout_toRightOf="@id/imgList"
                    android:layout_toEndOf="@id/imgList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="left"
                    android:paddingLeft="20dp"
                    android:layout_marginBottom="25dp"
                    android:textSize="22sp"
                    android:fontFamily="@font/gilroyregular"
                    android:text="Judul"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_toRightOf="@id/imgList"
                    android:layout_toEndOf="@id/imgList"
                    android:layout_below="@id/list_title"
                    android:id="@+id/list_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_centerVertical="true"
                    android:paddingLeft="23dp"
                    android:layout_marginTop="40dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorSlateGray"
                    android:fontFamily="@font/gilroyregular"
                    android:text="Hour"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

</LinearLayout>